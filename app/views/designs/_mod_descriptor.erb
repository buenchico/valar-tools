</div>
<div class="row">
  <% for i in 1..@size.to_i do %>
    <div class="float-left mr-4 mb-2">
      <div id="sys_type_sys_ftl-dd-placeholder" class="dd-container" style="width: 56px;">
        <div style="border-radius:2px; border:solid 1px #ccc; position:relative; cursor:pointer;" style="width: 56px; background: rgb(238, 238, 238) none repeat scroll 0% 0%;">
          <img style="vertical-align:middle; float:left; margin-right:5px; max-width:64px;" title="<%= $modules[(@design.modules[(i - 1)*2][0].to_sym)] %>" src="<%= image_url('tech/' + @design.modules[(i - 1)*2][0]) %>">
          <label style="font-weight:bold; font-size: 30px; margin-left: -40px; color: white"><%= @house.techs.where(tech_type: (@design.modules[(i - 1)*2][0].to_sym)).order(lvl: :desc).first.try(:lvl) || 1 %></label>
        </div>
      </div>
    </div>
  <% end %>
</div>
