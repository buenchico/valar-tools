<div class="row">
  <h3>Sistemas</h3>
</div>
<div class="row">
  <% $systems.each do |k,v| %>
    <div class="float-left mr-4 mb-2">
      <div id="sys_type_sys_ftl-dd-placeholder" class="dd-container" style="width: 56px;">
        <div style="border-radius:2px; border:solid 1px #ccc; position:relative; cursor:pointer;" style="width: 56px; background: rgb(238, 238, 238) none repeat scroll 0% 0%;">
          <img style="vertical-align:middle; float:left; margin-right:5px; max-width:64px;" title="<%= v %>" src="<%= image_url('tech/' + k.to_s) %>">
          <label style="font-weight:bold; font-size: 30px; margin-left: -40px; color: white"><%= @house.techs.where(tech_type: k.to_s).order(lvl: :desc).first.try(:lvl) || 1 %></label>
        </div>
      </div>
    </div>
  <% end %>
</div>
