<p id="notice"><%= notice %></p>

<h1>Locations</h1>

<table>
  <thead>
    <tr>
      <th>Lid</th>
      <th>Name es</th>
      <th>Name en</th>
      <th>House</th>
      <th>Hid</th>
      <th>Type</th>
      <th>Kingdom</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.lid %></td>
        <td><%= best_in_place location, :name_es %></td>
        <td><%= location.name_en %></td>
        <td><%= location.house %></td>
        <td><%= location.hid %></td>
        <td><%= location.location_type %></td>
        <td><%= location.kingdom %></td>
        <td><%= link_to 'Show', location %></td>
        <td><%= link_to 'Edit', edit_location_path(location) %></td>
        <td><%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

