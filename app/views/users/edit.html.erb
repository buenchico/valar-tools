<% provide(:title, @user.player + ' â€” ' + @user.house) %>
<% provide(:icon, $tools[:players][:icon]) %>

<div class="tool-title">
    <i class="white <%= yield(:icon) %>"></i>
    <%= yield(:title) %>
    <%= link_to 'Back', users_path, class: "btn btn-danger" %>    
</div>

<%= form_with(model: @user, local: true) do |form| %>
  <% if @user.errors.any? %>
    <div id="error_explanation" class="container mx-auto text-center alert alert-danger">
      <h2>Se ha encontrado un error</h2>
      <ul class="list-unstyled text-left">
      <% @user.errors.messages.values.each do |msg| %>
        <%msg.each do |m| %>
          <li><%= m %></li>
        <%end %>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="form-group form-inline">
    <div class="input-group mb-2">
      <div class="input-group-prepend">
        <div class="input-group-text"><i class="fas fa-user"></i>&nbsp;</div>
      </div>
      <%= form.text_field :player, class: "custom-control", placeholder: "Nombre del jugador"  %>
    </div>
  </div>

  <div class="form-group form-inline">
    <div class="input-group mb-2">
      <div class="input-group-prepend">
        <div class="input-group-text"><i class="fas fa-flag"></i></div>
      </div>
      <%= form.select :house, options_for_select(@active_houses), {}, {class: "custom-select"}  %>
    </div>
  </div>
  
  <div>
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>