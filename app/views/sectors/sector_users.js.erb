var inputs = {}
$(":input").each(function(){
  var e = $(this).attr('id');
  var val = $(this).val();
  inputs[e] = val
});

if ($('#cancel_system').is(":visible")) {
  var edit = true;
} else {
  var edit = false;
}

$('#sector-content').html("<%= j render 'form', sector: @sector %>");

<%=  render 'update' %>

for (var key in inputs){
  $('#' + key).val(inputs[key])
}

if (edit) {
  $('#edit_system').hide();
  $('#system :input').attr('disabled', false);
  $('#system').removeClass('op-20');
  $('#cancel_system').show();
}

$('#visibility_list_' + <%= @sector.id %>).html("<%= @sector.sector_users.order('info DESC').map{|x| [x.user.player, ' (' + x.info_lvl.to_s + ')'].join('')}.join(',').html_safe %>")

if ('<%= @action %>' == 'create') {
  if (<%= @forbidden %>) {
    $('.modal-body').prepend(`<div class="container mx-auto text-center alert alert-danger">Selecciona un jugador para crear la relación.</div>`);
  } else {
    $('.modal-body').prepend(`<div class="container mx-auto text-center alert alert-success">Relación creada correctamente.</div>`);
  }
}

if ('<%= @action %>' == 'destroy') {
  if (<%= @forbidden %>) {
    $('.modal-body').prepend(`<div class="container mx-auto text-center alert alert-danger">El controlador del sistema no puede ser eliminado.</div>`);
  } else {
    $('.modal-body').prepend(`<div class="container mx-auto text-center alert alert-success">Relación eliminada correctamente.</div>`);
  }
}
