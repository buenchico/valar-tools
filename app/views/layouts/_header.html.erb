<header class="bg-black">
  <div class="container container-fluid">
    <nav class="navbar navbar-expand-lg navbar-dark">
      <%= link_to image_tag("tools.png", :alt => "Valar Tools", id: "logo"), root_path, class: "navbar-brand mr-auto" %>
      <ul class="navbar-nav">
        <li class="nav-item"><%= link_to image_tag("valar-circle.png", :alt => "Valar", class: "nav-icon"), "https://www.valar.es", class: "nav-text-icon" %></li>
        <li class="nav-item dropdown">
          <%= link_to "", "#", id: "navbarDropdown", class: "nav-link dropdown-toggle fas fa-bars nav-text-icon", "role": "button", "data-toggle": "dropdown", "aria-haspopup": "true", "aria-expanded": "false" %>
            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
              <% $tool_pages.each do |key, value|  %>
                <%= link_to key, value, class: "dropdown-item" %>
              <% end %>
              <div class="dropdown-divider"></div>
              <% $static_pages.each do |key, value|  %>
                <%= link_to key, value, class: "dropdown-item" %>
              <% end %>
            </div>
        </li>
      </ul>
    </nav>
  </div>  
</header>