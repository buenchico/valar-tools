  <div class="modal-dialog" role="document">
    <div class="modal-content bg-dark">
      <div class="modal-header">
        <h5 class="modal-title" id="Login">Iniciar sesión</h5>
        <button type="button" class="close text-light" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= form_with url: login_path, remote: false do |form| %>
        <div class="modal-body">
          <div class="form-group form-inline">
              <div class="input-group mb-2">
                <div class="input-group-prepend">
                  <div class="input-group-text"><i class="fas fa-user"></i></div>
                </div>
                <%= form.text_field :player, class: "custom-control", placeholder: "Nombre de jugador" %>
              </div>
          </div>
          <div class="form-group form-inline">
              <div class="input-group mb-2">
                <div class="input-group-prepend">
                  <div class="input-group-text"><i class="fas fa-lock"></i></div>
                </div>
                <%= form.password_field :password, class: "custom-control", placeholder: "Contraseña"  %>
              </div>
          </div>
          <div class="form-group form-inline">
              <div class="input-group mb-2">
                <%= recaptcha_tags %>
              </div>
          </div>          
        </div>
        <div class="modal-footer">
          <%= form.submit 'Login', class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>